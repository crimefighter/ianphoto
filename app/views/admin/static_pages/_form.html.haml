=form_for [:admin, @static_page] do |f|
  =error_messages_for @static_page
  %p
    =f.label :name
    =f.text_field :name
  %p
    =f.label :slug
    =f.text_field :slug
  %p
    =f.label :body
    (Use 
    =link_to "textile markup", "http://warpedvisions.org/projects/textile-cheat-sheet/", :target => :_blank
    )
  %p
    =f.text_area :body, :size => "100x30"
  %p
    =f.submit "Save"
